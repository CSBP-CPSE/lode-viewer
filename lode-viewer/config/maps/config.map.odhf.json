{
    "id": "odhf",
	"dataSources": [
		{
			"name": "odhf-datasource",
			"data": {
				"type": "geojson",
				"data": "https://api.mapbox.com/datasets/v1/deil-leid/ckgwp449h04cf29mtammjlqsc/features?access_token=pk.eyJ1IjoiZGVpbC1sZWlkIiwiYSI6ImNrMzZxODNvNTAxZjgzYm56emk1c3doajEifQ.H5CJ3maS0ZuxX_7QTgz1kg",
				"cluster": true,
				"clusterMaxZoom": 14,
				"clusterRadius": 50
			}
		}
	],
	"style": "mapbox://styles/deil-leid/ckgaukzzq24qm19p79anoiu7b",
	"_originalstyle": "mapbox://styles/deil-leid/ckdhs8cjs052s1inu818yovbh",
    "table": "config/tables/config.table.odhf.json",
    "layers": [
		{
            "id": "odhf",
			"click" : true,
			"type": "circle",
			"source": "odhf-datasource",
			"filter": ["!", ["has", "point_count"]],
			"paint": {
				"circle-color": "#c2c2c2",
				"circle-radius": 5,
				"circle-stroke-width": 0.5,
				"circle-stroke-color": "#000000"
			}
		}, 
		{
			"id": "odhf-labels",
			"type": "symbol",
			"source": "odhf-datasource",
			"layout": {
				"text-anchor": "bottom-left",
				"text-justify": "center",
				"text-offset": [0.3,0.0],
				"text-field": ["step", ["zoom"], "", 8, ["get", "facility_name"], 22, ["get", "facility_name"]],
				"text-font": ["Open Sans Regular"],
				"text-size": 12
			},
			"print": {
				"text-color": "#000000"
			}
        }
    ],
    "title": {
        "en": "Open Database of Healthcare Facilities",
        "fr": "Base de données ouvertes sur les établissements de soins de santé"
    },
    "abbr": {
        "en": "ODHF",
        "fr": "BDOESS"
    },
    "legend": [
		{
            "color": [255, 0, 0],
            "label": {
                "en": "Hospitals",
                "fr": "Les hôpitaux"
            },
            "value": ["==", ["get", "odhf_facility_type"], "Hospitals"]
        }, {
            "color": [255, 255, 179],
            "label": {
                "en": "Nursing and residential care facilities",
                "fr": "Établissements de soins infirmiers et de soins pour bénéficiaires internes"
            },
            "value": ["==", ["get", "odhf_facility_type"], "Nursing and residential care facilities"]
        }, {
            "color": [190, 186, 218],
            "label": {
                "en": "Ambulatory health care services",
                "fr": "Services de soins de santé ambulatoires"
            }
        }
    ]
}
