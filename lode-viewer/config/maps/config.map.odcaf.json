{
	"id": "odcaf",
	"dataSources": [
		{
			"name": "odcaf-datasource",
			"data": {
				"type": "geojson",
				"data": "https://api.mapbox.com/datasets/v1/deil-leid/ckg9jcvqe242d23lgcwyut6kg/features?access_token=pk.eyJ1IjoiZGVpbC1sZWlkIiwiYSI6ImNrMzZxODNvNTAxZjgzYm56emk1c3doajEifQ.H5CJ3maS0ZuxX_7QTgz1kg",
				"cluster": true,
				"clusterMaxZoom": 14,
				"clusterRadius": 50
			}
		}
	],
	"style": "mapbox://styles/deil-leid/ckgaukzzq24qm19p79anoiu7b",
	"_originalstyle": "mapbox://styles/deil-leid/ckf8nmlrv1mzt1aqruvvbuwyo",
    "table": "config/tables/config.table.odcaf.json",
    "layers": [
		{
            "id": "odcaf",
			"click" : true,
			"type": "circle",
			"source": "odcaf-datasource",
			"filter": ["!", ["has", "point_count"]],
			"paint": {
				"circle-color": "#c2c2c2",
				"circle-radius": 5,
				"circle-stroke-width": 0.5,
				"circle-stroke-color": "#000000"
			}
		}, 
		{
			"id": "odcaf-labels",
			"type": "symbol",
			"source": "odcaf-datasource",
			"layout": {
				"text-anchor": "bottom-left",
				"text-justify": "center",
				"text-offset": [0.3,0.0],
				"text-field": ["step", ["zoom"], "", 8, ["get", "Facility_Name"], 22, ["get", "Facility_Name"]],
				"text-font": ["Open Sans Regular"],
				"text-size": 12
			},
			"print": {
				"text-color": "#000000"
			}
        }
    ],
    "title": {
        "en": "Open Database of Cultural and Art Facilities",
        "fr": "Base de données ouvertes sur les installations culturelles et artistiques"
    },
    "abbr": {
        "en": "ODCAF",
        "fr": "BDOICA"
    },
    "legend": [{
            "color": [128, 177, 211],
            "label": {
                "en": "Artist",
                "fr": "Artiste"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "artist"]
        }, 
		{
            "color": [252, 205, 229],
            "label": {
                "en": "Art or Cultural Centre",
                "fr": "Centre des arts ou de culture"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "art or cultural centre"]
        }, 
		{
            "color": [253, 180, 98],
            "label": {
                "en": "Festival Site",
                "fr": "Site de festival"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "festival site"]
        }, 
		{
            "color": [251, 128, 114],
            "label": {
                "en": "Gallery",
                "fr": "Galerie"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "gallery"]
        }, 
		{
            "color": [190, 186, 218],
            "label": {
                "en": "Heritage or Historic Site",
                "fr": "Site patrimonial ou historique"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "heritage or historic site"]
        }, 
		{
            "color": [255, 255, 179],
            "label": {
                "en": "Library or Archives",
                "fr": "Bibliothèque ou archives"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "library or archives"]
        }, 
		{
            "color": [141, 211, 199],
            "label": {
                "en": "Museum",
                "fr": "Musée"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "museum"]
        }, 
		{
            "color": [179, 222, 105],
            "label": {
                "en": "Theatres/Performance and Concert Hall",
                "fr": "Théâtres/salles de spectacle et salles de concert"
            },
            "value": ["==", ["get", "ODCAF_Facility_Type"], "theatre/performance and concert hall"]
        }, 
		{
            "color": [217, 217, 217],
            "label": {
                "en": "Miscellaneous",
                "fr": "Divers"
            }
        }
    ]
}
